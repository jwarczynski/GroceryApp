@using Warczynski.Zbaszyniak.GroceryApp.Core
@model Warczynski.Zbaszyniak.GroceryApp.MVC.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <select asp-for="Product.Category" class="form-control"
                        asp-items="@(new SelectList(Enum.GetValues(typeof(ProductCategory))))"></select>
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Magnesium" class="control-label"></label>
                <input asp-for="Product.Magnesium" class="form-control" />
                <span asp-validation-for="Product.Magnesium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Potassium" class="control-label"></label>
                <input asp-for="Product.Potassium" class="form-control" />
                <span asp-validation-for="Product.Potassium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Sodium" class="control-label"></label>
                <input asp-for="Product.Sodium" class="form-control" />
                <span asp-validation-for="Product.Sodium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.GroceryId" class="control-label"></label>
                <select asp-for="Product.GroceryId" class="form-control">
                    @foreach (var grocery in Model.Groceries)
                    {
                        <option value="@grocery.Id" selected="@(grocery.Id == Model.Product.Grocery.Id)">@grocery.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
