<Page x:Class="GroceryApp.WPF.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GroceryApp.WPF"
      xmlns:validationRules="clr-namespace:GroceryApp.WPF.ValidationRules"
      mc:Ignorable="d"
      x:Name="Page"
      Title="EditProductPage" Height="450" Width="800"
      Background="{StaticResource BackgroundBrush}">

    <Page.DataContext>
        <local:ProductViewModel></local:ProductViewModel>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- First Row -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Label Content="Name" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
            <Label Content="Price" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
            <Label Content="Category" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
            <Label Content="Magnesium" Grid.Column="3" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
        </Grid>

        <!-- Second Row -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TxtName" Style="{StaticResource InputTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="Product.Name" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validationRules:NonEmptyInputRule ElementName="Name" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox x:Name="TxtPrice"
                     Grid.Column="1"
                     Style="{StaticResource InputTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="Product.Price" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validationRules:GreaterThanZeroRule ElementName="Price" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ComboBox SelectedItem="{Binding Product.Category, Mode=TwoWay}" Grid.Column="2"
                      ItemsSource="{Binding Source={x:Static local:ProductsPage.ProductCategoryEnumValues}}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}" />
                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>

            <TextBox x:Name="TxtMagnesium"
                     Grid.Column="3"
                     Style="{StaticResource InputTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="Product.Magnesium" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validationRules:GreaterThanZeroRule ElementName="Magnesium" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>

        <!-- Third Row -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label Content="Potassium" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
            <Label Content="Sodium" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
            <Label Content="Grocery" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{StaticResource PrimaryBrush}" />
        </Grid>

        <!-- Fourth Row -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TxtPotassium"
                     Style="{StaticResource InputTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="Product.Potassium" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validationRules:GreaterThanZeroRule ElementName="Potassium" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBox x:Name="TxtSodium"
                     Grid.Column="1"
                     Style="{StaticResource InputTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="Product.Sodium" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validationRules:GreaterThanZeroRule ElementName="Sodium" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ComboBox x:Name="CmbGrocery" Grid.Column="2"
                      ItemsSource="{Binding Groceries }"
                      SelectedItem="{Binding Product.Grocery, Mode=TwoWay}"
                      Background="{StaticResource BackgroundLightBrush}" Foreground="{StaticResource PrimaryBrush}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}" />
                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource GroceryToStringConverter}}"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Background="{StaticResource BackgroundLightBrush}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- Button Row -->
        <Grid Grid.Row="4" Margin="20">
            <Button Content="Save" Width="Auto" HorizontalAlignment="Stretch" Margin="0,10,0,0"
                    Click="Save_Click"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="{StaticResource BackgroundBrush}" />
        </Grid>

    </Grid>
</Page>